@model PlantShop.Models.Category

@{
    ViewData["Title"] = "Детальна інформація про категорію";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center my-5">@ViewData["Title"]</h2>

<div class="container col-md-8 mx-auto">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div class="d-flex justify-content-evenly mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-primary">Редагувати</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Повернутися до списку</a>
</div>
