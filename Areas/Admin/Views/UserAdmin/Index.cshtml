@model PaginatedList<AppUser>

@{
    ViewData["Title"] = "Користувачи";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="text-center mt-5">
    <h1>@ViewData["Title"]</h1>
</div>

<table class="table table-striped table-hover">
    <thead class="table-success">
        <tr>
            <th class="text-success h5 py-3">@Html.DisplayNameFor(model => model.Items.First().FirstName)</th>
            <th class="text-success h5 py-3">@Html.DisplayNameFor(model => model.Items.First().LastName)</th>
            <th class="text-success h5 py-3">@Html.DisplayNameFor(model => model.Items.First().Email)</th>
            <th class="text-success h5 py-3">@Html.DisplayNameFor(model => model.Items.First().Role)</th>
            <th class="text-success h5 py-3">@Html.DisplayNameFor(model => model.Items.First().RegistrationDate)</th>
            <th class="text-success h5 py-3">@Html.DisplayNameFor(model => model.Items.First().LastLoginDate)</th>
            <th class="text-success h5 py-3">Actions</th>
        </tr>
    </thead>
    <tbody class="table-group-divider green">
        @foreach (var user in Model.Items)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => user.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => user.LastName)</td>
                <td>@Html.DisplayFor(modelItem => user.Email)</td>
                <td>@Html.DisplayFor(modelItem => user.Role)</td>
                <td>@Html.DisplayFor(modelItem => user.RegistrationDate)</td>
                <td>@Html.DisplayFor(modelItem => user.LastLoginDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Редагування</a>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-secondary">Деталі</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_PaginationPartial" />