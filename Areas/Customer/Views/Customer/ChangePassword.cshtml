@using Plantshop.ViewModels
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Зміна пароля";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="w-50">
    <h2 class="text-center my-5">@ViewData["Title"]</h2>
    <form asp-action="ChangePassword" method="post">
        <div class="col-md-12 mb-2 me-2">
            <label for="inputPassword1" class="form-label">Поточний пароль</label>
            <input type="password" class="form-control" id="inputPassword1" asp-for="CurrentPassword">
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="col-md-12 mb-2 me-2">
            <label for="inputPassword2" class="form-label">Новий пароль</label>
            <input type="password" class="form-control" id="inputPassword2" asp-for="NewPassword">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="col-md-12 mb-3 me-2">
            <label for="inputPassword3" class="form-label">Підтвердіть новий пароль</label>
            <input type="password" class="form-control" id="inputPassword3" asp-for="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="col-md-4 mx-auto mt-5">
            <button type="submit" class="btn btn-green px-4">Зберегти зміни</button>
        </div>
    </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}