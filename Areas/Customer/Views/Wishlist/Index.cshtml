@model IEnumerable<Plant>

<div class="wishlist-container">
    @if (Model.Any())
    {
        foreach (var plant in Model)
        {
            <div class="wishlist-item">
                <img src="@plant.ImageUrl" alt="@plant.Name" />
                <h3>@plant.Name</h3>
                <p>@plant.CurrentPrice грн</p>
                <button class="wishlist-btn" 
                        data-plant-id="@plant.PlantId"
                        onclick="toggleWishlist(this, @plant.PlantId)">
                    <i class="bi bi-heart"></i>
                </button>
                <a href="@Url.Action("PlantDetails", "Home", new { id = plant.PlantId })" 
                   class="btn btn-primary">
                    Детальніше
                </a>
            </div>
        }
    }
    else
    {
        <p>Ваш список бажань порожній</p>
    }
</div>