                                        </a>
                                        <div class="card-body">
                                            <h5 class="card-title"><strong>@plant.Name</strong></h5>
                                            <p class="card-text green">
                                                @if (plant.IsOnSale)
                                                {
                                                    <strong class="text-green">&#8372;@plant.DiscountPrice</strong>
                                                    <del class="text-secondary ms-2"><strong>&#8372;@plant.BasePrice</strong></del>
                                                }
                                                else
                                                {
