@model int
@{
    var isInWishlist = ViewBag.WishlistItems != null && ViewBag.WishlistItems.Contains(Model);
}

<button class="wishlist-button @(isInWishlist ? "active" : "")"
        data-plant-id="@Model"
        onclick="toggleWishlist(this, @Model)">
    <i class="bi bi-heart@(isInWishlist ? "-fill" : "")"></i>
</button>

